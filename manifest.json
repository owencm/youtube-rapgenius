{
  "manifest_version": 2,

  "name": "YouTube Rap Genius",
  "description": "This extension demonstrates a browser action with kittens.",
  "version": "1.0",
  "permissions": [
    "http://rock.rapgenius.com/",
    "http://rapgenius.com/"
  ],
  "background": {
    "scripts": ["rap-api.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}